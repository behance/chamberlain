batch :prepare_env do
  shelltask { command 'pip install virtualenv' }
  shelltask { command 'virtualenv -p /usr/bin/python2.7 .virtualenv' }
  shelltask { command '.virtualenv/bin/pip install -r requirements.txt -r test-requirements.txt' }
end

batch :ci_test do
  invoke_batch :prepare_env
  shelltask { command '.virtualenv/bin/tox' }
end

invoke_batch :ci_test
